@model IEnumerable<FashionGo.Models.Entities.ProductCategory>

@{
    ViewBag.Title = "Danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<p>
   @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
</p>

<div class="box">
    <div class="box-body">
        <table class="table table-bordered table-responsive">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Slug)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParentCategory.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.Banner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayOrder)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.Image" style="max-width:48px;" />
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Slug)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentCategory.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <img src="@item.Banner" style="max-height:36px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayOrder)
                    </td>
                    <td>
                        @Html.ActionLink("Xem", "Details", new { id = item.CatId }, new { @class = "btn btn-xs btn-primary" })
                        @Html.ActionLink("Sửa", "Edit", new { id = item.CatId }, new { @class = "btn btn-xs btn-warning" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.CatId }, new { @class = "btn btn-xs btn-danger", onclick = "return confirm('Bạn có chắc muốn xóa?')" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

